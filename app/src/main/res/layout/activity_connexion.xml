<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="informations.MainInfo">

    <EditText
    android:layout_width="200dp"
    android:layout_height="30dp"
    android:textAppearance="?android:attr/textAppearanceLarge"
    android:id="@+id/textViewID"
    android:inputType="textCapSentences"
    android:textSize="20dp"
    android:gravity="center"
    android:layout_gravity="top"
    android:layout_marginTop="200dp"
    android:background="@drawable/rectangle" />

    <EditText
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:textSize="20dp"
        android:gravity="center"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/textViewMdp"
        android:inputType="textPassword"
        android:layout_marginTop="330dp"
        android:layout_gravity="top"
        android:background="@drawable/rectangle" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/identifiant"
        android:id="@+id/textViewId"
        android:layout_marginTop="150dp"
        android:layout_gravity="top" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/motdepasse"
        android:id="@+id/textViewMotdepasse"
        android:layout_gravity="top"
        android:layout_marginTop="280dp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/connexion"
        android:id="@+id/buttonConnexion"
        android:layout_gravity="bottom"
        android:background="@drawable/nav_bar_degrade" />

    <android.support.design.widget.AppBarLayout
        android:id="@+id/app_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="@drawable/nav_bar_degrade"
            android:gravity="bottom"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            android:title="@string/connexion"/>

    </android.support.design.widget.AppBarLayout>

</android.support.design.widget.CoordinatorLayout>