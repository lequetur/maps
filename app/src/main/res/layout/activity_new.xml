<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="informations.MainInfo">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/nom"
        android:id="@+id/textViewName"
        android:layout_gravity="top"
        android:layout_marginTop="90dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/prenom"
        android:id="@+id/textViewSurname"
        android:layout_gravity="top"
        android:layout_marginTop="170dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/identifiant"
        android:id="@+id/textViewId"
        android:layout_marginTop="250dp"
        android:layout_gravity="top" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/motdepasse"
        android:id="@+id/textViewMotdepasse"
        android:layout_gravity="top"
        android:layout_marginTop="330dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/confirmation"
        android:id="@+id/textViewConfirmationMdp"
        android:layout_gravity="top"
        android:layout_marginTop="410dp" />

    <EditText
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/textViewNom"
        android:layout_gravity="top"
        android:layout_marginTop="120dp"
        android:background="@drawable/rectangle"
        android:inputType="textCapSentences"
        android:textSize="20dp"
        android:gravity="center" />

    <EditText
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/textViewPrenom"
        android:layout_gravity="top"
        android:layout_marginTop="200dp"
        android:background="@drawable/rectangle"
        android:inputType="textCapSentences"
        android:textSize="20dp"
        android:gravity="center" />

    <EditText
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/textViewID"
        android:layout_gravity="top"
        android:layout_marginTop="280dp"
        android:background="@drawable/rectangle"
        android:inputType="textCapSentences"
        android:textSize="20dp"
        android:gravity="center" />

    <EditText
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/textViewMdp"
        android:layout_marginTop="360dp"
        android:layout_gravity="top"
        android:background="@drawable/rectangle"
        android:inputType="textPassword"
        android:textSize="20dp"
        android:gravity="center" />

    <EditText
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/textViewConfirm"
        android:layout_marginTop="440dp"
        android:layout_gravity="top"
        android:background="@drawable/rectangle"
        android:inputType="textPassword"
        android:textSize="20dp"
        android:gravity="center" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/inscription"
        android:id="@+id/buttonInscription"
        android:layout_gravity="bottom"
        android:background="@drawable/nav_bar_degrade" />

    <android.support.design.widget.AppBarLayout
        android:id="@+id/app_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="@drawable/nav_bar_degrade"
            android:gravity="bottom"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            android:title="@string/connexion"/>

    </android.support.design.widget.AppBarLayout>

</android.support.design.widget.CoordinatorLayout>